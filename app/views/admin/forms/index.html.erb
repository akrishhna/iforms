<% title 'Forms List'%>

<div class="<%= page_action %>">
  <h2>List of Forms</h2>

  <div class="forms_list">
    <table class="table table-bordered">
      <tr>
        <th>&nbsp;</th>
        <th>Form Name</th>
        <th>Created At</th>
      </tr>
      <% @doctors.each do |doctor, forms| %>
        <tr>
          <th colspan="3"><%= doctor %></th>
        </tr>
        <% forms.each do |f| %>
          <tr>
            <td></td>
            <td><%= f.formname %></td>
            <td><%= f.created_at.strftime('%Y-%m-%d %H:%M') if f.created_at %></td>
          </tr>
        <% end %>
      <% end %>
    </table>
  </div>
</div>
