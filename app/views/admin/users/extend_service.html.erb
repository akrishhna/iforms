<div id="extend_service_alert_box">
  <%= form_tag("/admin/users/extend_user_service") do %>
    <%= hidden_field_tag :service_id, params[:service_id] %>
    <div class="control-group">
      <%#= label_tag :expiry_date, "Expiry Date", :class => 'control-label' %>
      <%= label_tag :displaying_date_expiry_date, "Expiry Date", :class => 'control-label' %>
      <div class="controls">
        <%#= text_field_tag :expiry_date,"", :class => "expiry_date_selector", :placeholder => "YYYY-MM-DD" %>
        <%= text_field_tag :displaying_date_expiry_date, '', :class => "expiry_date_selector admin_display_date", :placeholder => "MM-DD-YYYY" %>
        <%= hidden_field_tag :expiry_date %>
      </div>
    </div>
    <div class="actions">
      <%= submit_tag 'Extend Service', :class => 'btn btn-primary' %>
    </div>
  <% end %>
</div>

<%= javascript_tag do %>
  var user_service = <%= raw @user_service_provider.to_json %>;
  console.log(user_service);
<% end %>

<script type="text/javascript">
  // $('.expiry_date_selector').datepicker().datepicker("option", "dateFormat", "yy-mm-dd").datepicker("setDate", user_service['expiry_date'])
  var date = '';

  if (user_service['expiry_date']) {
    date = change_date_format(user_service['expiry_date'])
  } else {
    var date = new Date();
      var year = date.getFullYear();
      var month = (date.getMonth() + 1);
      var today_date = date.getDate();
      if (month <= 9) {
        month = '0' + month
      }
    set_date = month + '-' + today_date + '-' + year
  }

  $('.expiry_date_selector').datepicker({
    changeMonth:true,
    changeYear:true,
    dateFormat:'mm-dd-yy',
    yearRange:'1940:' + new Date().getFullYear()
  }).datepicker("setDate", set_date);

  $('#expiry_date').val(set_default_date_format($('#displaying_date_expiry_date').val()));

</script>