<!DOCTYPE html>
<html>
<head>
  <title><%= content_for?(:title) ? yield(:title) : "iforms" %></title>
  <meta http-equiv="content-type" content="text/html; charset=UTF-8">
  <%= stylesheet_link_tag "application" %>
  <%= javascript_include_tag "application" %>
  <%= yield(:head)%>
  <%= stylesheet_link_tag params[:controller]%>
  <%= javascript_include_tag params[:controller]%>
  <%= csrf_meta_tags %>
  <%= javascript_tag do %>
     var params =  <%= raw params.to_json %>;
  <% end %>
</head>
<body>
    <div class="header">
      <% if current_user %>
          Welcome! <%= link_to current_user_name, edit_user_registration_path %>,
          <%= link_to 'Sign out', destroy_user_session_path %>
      <% else %>
          <%= link_to 'Sign in', new_user_session_path %>
      <% end %>
    </div>
    <div class="logo" onclick="window.location.href='/';">
    </div>
    <div class="container_layout">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, :id => "flash_#{name}", :class => "flash flash-#{name}" do %>
          <%= raw msg %>
        <% end %>
      <% end %>

      <%= yield %>
    </div>
    <div class="footer">
      <% if user_signed_in? and current_user.role =="patient" %>
          <%= link_to 'Home', patients_path %> |
      <% elsif user_signed_in? and current_user.role =="doctor" %>
          <%= link_to 'Home', doctors_path %> |
      <% elsif user_signed_in? and current_user.role =="admin" %>
          <%= link_to 'Home', :controller => "admin", :action => "index" %> |
      <% else %>
          <%= link_to 'Home', root_url %> |
      <% end %>
      <%= link_to 'About Us', '/about' %> |
      <%= link_to 'FAQ', '/FAQ' %> |
      <%= link_to 'Contact', '/contact' %>
    </div>
</body>
</html>
