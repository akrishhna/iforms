<div class="index">
<h3>My Appointments</h3>
<% if !@appointments.blank? %>
<table border="0" width="80%" class="mytable">
	<tr BGCOLOR="grey" >
		<th>s.no</th>
		<th>Patient Name</th>
		<th>Appointment Datetime</th>
		<th>Form Sent At</th>
		<th></th>
	</tr>
	<% count = 1 %>
<% @appointments.each do |i|%>
<% if i.timesent %>
<% i.timesent = i.timesent.to_datetime %>
<% timesent_date = i. timesent.strftime("%Y-%m-%d") %>
<% timesent_hrs = i.timesent.strftime("%H") %>
<% timesent_min = i.timesent.strftime("%M") %>
<% timesent_hrs_int = timesent_hrs.to_i %>
<% var = 12 %>
<% if var<=timesent_hrs_int %>
<% timesent_hrs = (timesent_hrs_int - var).to_s %>
<% am_pm = "PM" %>
<% @timesent = timesent_date+" "+timesent_hrs+":"+timesent_min+" "+am_pm %>
<% else %>
<% am_pm = "AM" %>
<% @timesent = timesent_date+" "+timesent_hrs+":"+timesent_min+" "+am_pm %>
<% end %>
<% end %>
<tr>
	<td><%= count %>
	<% count+=1 %>
	<% str = i.firstname.capitalize + " " + i.lastname.capitalize %>
	<td><%= str %></td>
	<td><%= i.date %> <%= i.time_hrs %>:<%= i.time_min %>  <%= i.AM_PM %></td>
	<td><%= @timesent %></td>
	<td><%= link_to 'View form here', i %></td>
</tr>	
<%end%>
</table>
<% else %>
<p>You have no Appointments! </p>
<%end%>
</br>
</br>
<%= link_to 'New Appointment', new_appointment_path %>
</div>