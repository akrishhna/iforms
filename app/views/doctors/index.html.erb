<div class="index">
	<ul class = "breadcrumbs">
	<li>	<%= link_to 'My Appointments',doctors_path %>></li>
<li><%= link_to 'New Appointment', new_appointment_path %></li>
</ul>
<br />
<% if !@appointments.blank? %>
<table border="0" width="80%" class="mytable">
	<tr BGCOLOR="grey" >
		<th>Name</th>
		<th>Email</th>
		<th>Form</th>
		<th>Appointment</th>
		<th>Sent</th>
	
	</tr>
	<% count = 1 %>
<% @appointments.each do |i|%>
<% if i.timesent %>
<% i.timesent = i.timesent.to_datetime %>
<% timesent_date = i. timesent.strftime("%Y-%m-%d") %>
<% timesent_hrs = i.timesent.strftime("%H") %>
<% timesent_min = i.timesent.strftime("%M") %>
<% timesent_hrs_int = timesent_hrs.to_i %>
<% var = 12 %>
<% if var<=timesent_hrs_int %>
<% timesent_hrs = (timesent_hrs_int - var).to_s %>
<% am_pm = "PM" %>
<% @timesent = timesent_date.to_date.strftime("%m-%d-%Y")+" "+timesent_hrs+":"+timesent_min+" "+am_pm %>
<% else %>
<% am_pm = "AM" %>
<% @timesent = timesent_date.to_date.strftime("%m-%d-%Y")+" "+timesent_hrs+":"+timesent_min+" "+am_pm %>
<% end %>
<% end %>
<tr>
	<% str = i.firstname.capitalize + " " + i.lastname.capitalize %>
	<td><%= str%></td>
	<td><%= i.email%></td>
	<% if i.formname.blank? %>
	<td></td>
	<%else%>
	<td><%= link_to 'Fill form here', i %></td>
	<%end%>
	<td><%= i.date.strftime("%m-%d-%Y") %> <%= i.time_hrs %>:<%= i.time_min %>  <%= i.AM_PM %></td>
	<td><%= @timesent %></td>
	
</tr>	
<%end%>
</table>
<br />
<% else %>
<p>You have no Appointments! </p>
<%end%>
</br>

</div>