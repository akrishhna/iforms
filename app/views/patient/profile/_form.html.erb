<div class="form">
  <%= form_for patient, :url => patient.new_record? ? patient_profile_path : patient_profile_path, :html => {:class => "form-horizontal"} do |f|%>
    <fieldset>
      <legend><%= form_header %></legend>
      <div class="control-group">
        <%= f.label :firstname, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :firstname %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :lastname, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :lastname %>
        </div>
      </div>
      <div class="form-actions">
        <%= f.submit 'Update', :class => "btn btn-primary" %>
      </div>
    </fieldset>
  <% end %>
</div>