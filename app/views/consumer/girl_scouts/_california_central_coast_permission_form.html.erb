<%= form_for @girl_scouts_permission_form, :url => "/view_girl_scout_permission_form", :html => {:class => 'form-horizontal girl_scout_permission_form', :multipart => true} do |f| %>
  <%= f.hidden_field :id %>

  <p> My daughter <strong><%= @girl_scout.first_name %> <%= @girl_scout.last_name %></strong>, has my permission
    to go to and participate in the <strong><%= @activity.activity_name %></strong>. She is in good physical condition
    and has not had any serious illness or operation since her last health exam.
  </p>

  <div class="control-group">
    <%= f.label :gapf_parent_home_phone_1, "Phone number", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :gapf_parent_home_phone_1, :style => "width:30px;", :placeholder => "###", :size => 3, :maxlength => 3 %>
      -
      <%= f.text_field :gapf_parent_home_phone_2, :style => "width:30px;", :placeholder => "###", :size => 3, :maxlength => 3 %>
      -
      <%= f.text_field :gapf_parent_home_phone_3, :style => "width:40px;", :placeholder => " ####", :size => 4, :maxlength => 4 %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :gapf_parent_cell_phone_1, "Cell number", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :gapf_parent_cell_phone_1, :style => "width:30px;", :placeholder => "###", :size => 3, :maxlength => 3 %>
      -
      <%= f.text_field :gapf_parent_cell_phone_2, :style => "width:30px;", :placeholder => "###", :size => 3, :maxlength => 3 %>
      -
      <%= f.text_field :gapf_parent_cell_phone_3, :style => "width:40px;", :placeholder => " ####", :size => 4, :maxlength => 4 %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :gapf_parent_other_phone_1, "Other number", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :gapf_parent_other_phone_1, :style => "width:30px;", :placeholder => "###", :size => 3, :maxlength => 3 %>
      -
      <%= f.text_field :gapf_parent_other_phone_2, :style => "width:30px;", :placeholder => "###", :size => 3, :maxlength => 3 %>
      -
      <%= f.text_field :gapf_parent_other_phone_3, :style => "width:40px;", :placeholder => " ####", :size => 4, :maxlength => 4 %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :emergency_contact_first_name, "Emergency Contact", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :emergency_contact_first_name, :placeholder => "First Name", :class => "input-small" %>
      <%= f.text_field :emergency_contact_last_name, :placeholder => "Last Name", :class => "input-small" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :emergency_contact_address_street, "Address", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :emergency_contact_address_street, :placeholder => "Address 1", :style => 'width:445px;margin-bottom:10px;' %>
      <%= f.text_field :emergency_contact_address_line, :placeholder => "Address 2", :style => 'width:445px;margin-bottom:10px;' %>
      <br>
      <%= f.text_field :emergency_contact_address_city, :placeholder => "City", :style => 'width:445px;margin-bottom:10px;' %> &nbsp;
      <br>
      <%= f.select :emergency_contact_address_state, options_for_select(StaticData.state, f.object.emergency_contact_address_state), :include_blank => true %> &nbsp;
      <%= f.text_field :emergency_contact_address_zip, :placeholder => "Postal / Zip Code" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :emergency_contact_phone_number_1, "Emergency Contact Phone", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :emergency_contact_phone_number_1, :style => "width:30px;", :placeholder => "###", :size => 3, :maxlength => 3 %>
      -
      <%= f.text_field :emergency_contact_phone_number_2, :style => "width:30px;", :placeholder => "###", :size => 3, :maxlength => 3 %>
      -
      <%= f.text_field :emergency_contact_phone_number_3, :style => "width:40px;", :placeholder => " ####", :size => 4, :maxlength => 4 %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :emergency_contact_cell_number_1, "Emergency Contact Cell", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :emergency_contact_cell_number_1, :style => "width:30px;", :placeholder => "###", :size => 3, :maxlength => 3 %>
      -
      <%= f.text_field :emergency_contact_cell_number_2, :style => "width:30px;", :placeholder => "###", :size => 3, :maxlength => 3 %>
      -
      <%= f.text_field :emergency_contact_cell_number_3, :style => "width:40px;", :placeholder => " ####", :size => 4, :maxlength => 4 %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :emergency_contact_relationship_to_participant, "Relationship to participant", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :emergency_contact_relationship_to_participant, :placeholder => "Relationship", :class => "input-xlarge" %>
    </div>
  </div>

  <div class="control-group + <%= @fields['Allergies'] ? '' : 'hide' %>">
    <%= f.label :gapf_allergies, "Allergies", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :gapf_allergies, :style => "width:400px" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :gapf_emergency_medical_treatment, 'Emergency Medical Treatment', :class => 'control-label' %>
    <div class="controls">
      <%= label_tag "radio_buttons", :class => 'radio inline' do %>
        <%= f.radio_button :gapf_emergency_medical_treatment, "Yes" %>Yes
      <% end %>
      <%= label_tag "radio_buttons", :class => 'radio inline' do %>
        <%= f.radio_button :gapf_emergency_medical_treatment, "No" %>No
      <% end %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :gapf_publicity_photos, 'Publicity photos ', :class => 'control-label' %>
    <div class="controls">
      <%= label_tag "radio_buttons", :class => 'radio inline' do %>
        <%= f.radio_button :gapf_publicity_photos, "Yes" %>Yes
      <% end %>
      <%= label_tag "radio_buttons", :class => 'radio inline' do %>
        <%= f.radio_button :gapf_publicity_photos, "No" %>No
      <% end %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :medications, "Medication", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :medications, :rows => 4, :style => "width:98%;" %>
    </div>
  </div>
<% end %>