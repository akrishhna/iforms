<table class="table table-bordered">
  <tr>
    <th style="text-align: center">Girl Scout</th>
    <th style="text-align: center">Activity</th>
    <th style="text-align: center">Activity Date(s)</th>
    <th style="text-align: center">Price</th>
    <th style="text-align: center">Due Date</th>
    <th style="text-align: center">Attending</th>
    <th style="text-align: center">Status</th>
    <th style="text-align: center">Action</th>
  </tr>
  <% @results.each do |result| %>
    <tr style="text-align: center;">
      <td><%= result[:girl_scout] %></td>
      <td><%= result[:activity_name] %></td>
      <td><%= result[:activity_date_begin].strftime("%m/%d/%Y") rescue '' %>
        - <%= result[:activity_date_end].strftime("%m/%d/%Y") rescue '' %></td>
      <td><%= result[:price].present? ? number_to_currency(result[:price]) : "Free!" %></td>
      <td><%= result[:due_date].strftime("%m/%d/%Y") rescue '' %></td>
      <td style="text-align: center;">
        <%= label_tag "checkboxs", :class => 'checkbox inline' do %>
          <%= check_box_tag :attending, '', result[:attending], :class => 'attending_check_box', "data-id" => result[:id] %>
        <% end %>
      </td>
      <td>
        <% if result[:status] == 'Sent' %>
          Sent <%= result[:updated_at].strftime("%m/%d/%Y") %>
        <% else %>
          <%= result[:status] %>
        <% end %>
      </td>
      <td><%= link_to "Edit", view_girl_scout_permission_form_consumer_girl_scouts_path(:id => result[:id]) %>
        | <%= link_to "View PDF", consumer_view_pdf_consumer_girl_scouts_path(:id => result[:id]) %></td>
    </tr>
  <% end %>
</table>