<%= form_for @girl_scouts_permission_form, :url => "/view_girl_scout_permission_form", :html => {:class => 'form-horizontal girl_scout_permission_form', :multipart => true} do |f| %>
  <%= f.hidden_field :id %>

  <p> My daughter <strong><%= @girl_scout.first_name %> <%= @girl_scout.last_name %></strong>, has my permission
    to go to and participate in the <strong><%= @activity.activity_name %></strong>. She is in good physical condition
    and has not had any serious illness or operation since her last health examination.
  </p>

  <p>
    I give the Council permission, for Girl Scout related purposes, to use photographs or videotapes of my child
    participating in Girl Scout
    activities or accepting Girl Scout services.
  </p>

  <div class="control-group">
    <%= f.label :parent_phone_number_during_activity_1, "During the activity I may be reached at this number", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :parent_phone_number_during_activity_1, :style => "width:30px;", :placeholder => "###", :size => 3, :maxlength => 3 %>
      -
      <%= f.text_field :parent_phone_number_during_activity_2, :style => "width:30px;", :placeholder => "###", :size => 3, :maxlength => 3 %>
      -
      <%= f.text_field :parent_phone_number_during_activity_3, :style => "width:40px;", :placeholder => " ####", :size => 4, :maxlength => 4 %>
    </div>
  </div>

  <div class="control-group + <%= @fields['Authorize Behalf Address'] ? '' : 'hide' %>">
    <%= f.label :act_in_my_behalf_address_1, "Address", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :act_in_my_behalf_address_1, :placeholder => "Address 1", :style => 'width:445px;margin-bottom:10px;' %>
      <%= f.text_field :act_in_my_behalf_address_2, :placeholder => "Address 2", :style => 'width:445px;margin-bottom:10px;' %>
      <br>
      <%= f.text_field :act_in_my_behalf_address_city, :placeholder => "City", :style => 'width:445px;margin-bottom:10px;' %> &nbsp;
      <br>
      <%= f.select :act_in_my_behalf_address_state, options_for_select(StaticData.state, f.object.act_in_my_behalf_address_state), :include_blank => true %> &nbsp;
      <%= f.text_field :act_in_my_behalf_address_zip, :placeholder => "Postal / Zip Code" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :emergency_contact_first_name, "Emergency Contact", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :emergency_contact_first_name, :placeholder => "First Name", :class => "input-small" %>
      <%= f.text_field :emergency_contact_last_name, :placeholder => "Last Name", :class => "input-small" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :emergency_contact_phone_number_1, "Emergency Contact Phone", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :emergency_contact_phone_number_1, :style => "width:30px;", :placeholder => "###", :size => 3, :maxlength => 3 %>
      -
      <%= f.text_field :emergency_contact_phone_number_2, :style => "width:30px;", :placeholder => "###", :size => 3, :maxlength => 3 %>
      -
      <%= f.text_field :emergency_contact_phone_number_3, :style => "width:40px;", :placeholder => " ####", :size => 4, :maxlength => 4 %>
    </div>
  </div>

  <div class="control-group + <%= @fields['Address'] ? '' : 'hide' %>">
    <%= f.label :emergency_contact_address_street, "Address", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :emergency_contact_address_street, :placeholder => "Address 1", :style => 'width:445px;margin-bottom:10px;' %>
      <%= f.text_field :emergency_contact_address_line, :placeholder => "Address 2", :style => 'width:445px;margin-bottom:10px;' %>
      <br>
      <%= f.text_field :emergency_contact_address_city, :placeholder => "City", :style => 'width:445px;margin-bottom:10px;' %> &nbsp;
      <br>
      <%= f.select :emergency_contact_address_state, options_for_select(StaticData.state, f.object.emergency_contact_address_state), :include_blank => true %> &nbsp;
      <%= f.text_field :emergency_contact_address_zip, :placeholder => "Postal / Zip Code" %>
    </div>
  </div>

  <div class="control-group + <%= @fields['Relationship To Patient'] ? '' : 'hide' %>">
    <%= f.label :emergency_contact_relationship_to_participant, "Relationship to participant", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :emergency_contact_relationship_to_participant, :placeholder => "Relationship", :class => "input-xlarge" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :gapf_physician_first_name, "Physician Name", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :gapf_physician_first_name, :placeholder => "First Name", :class => "input-small" %>
      <%= f.text_field :gapf_physician_last_name, :placeholder => "Last Name", :class => "input-small" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :gapf_physician_phone_1, "Physician Phone", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :gapf_physician_phone_1, :style => "width:30px;", :placeholder => "###", :size => 3, :maxlength => 3 %>
      -
      <%= f.text_field :gapf_physician_phone_2, :style => "width:30px;", :placeholder => "###", :size => 3, :maxlength => 3 %>
      -
      <%= f.text_field :gapf_physician_phone_3, :style => "width:40px;", :placeholder => " ####", :size => 4, :maxlength => 4 %>
    </div>
  </div>

<% end %>