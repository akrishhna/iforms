<div class="container">
<h2>Sign in</h2>

<%= form_for(resource_name, resource, :url => session_path(resource_name)) do |f| %>
<% if resource.errors.any? %>
<div id="error_explanation">
	<ul>
    <% resource.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul> 
  </div> 
<% end %>
<br />

  <div class = "labelcss">Email </div>
  <%= f.text_field :email %>
<br /><br />
  <div class = "labelcss">Password </div>
  <%= f.password_field :password %>
<br /><br />
  <% if devise_mapping.rememberable? -%>
   <div class = "labelcss"> <%= f.check_box :remember_me %> Remember_me </div>
  <% end -%>
<br />
<div class = "actions">
  <%= f.submit "Sign in" %>
</div>
<% end %>

<%= render :partial => "devise/shared/links" %>
</div>