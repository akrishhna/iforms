<div class="container">
<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource_name, resource, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
<% if resource.errors.any? %>
<div id="error_explanation">
	<ul>
    <% resource.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul> 
  </div> 
<% end %>
<br />
  <div class="labelcss">Email</div>  
  <%= f.text_field :email %>
<br /><br />
  <div class="labelcss">New password </div> 
  <%= f.password_field :password %>
<br /><br />
  <div class="labelcss">Password confirmation </div>
  <%= f.password_field :password_confirmation %>
<br /><br />
  <div class="labelcss">Current password </div> 
  <%= f.password_field :current_password %>
<br /><br />
  <div class="actions">  
  <%= f.submit "Update" %>
  </div>
<% end %>
<% if current_user.role == "patient" %>
<% @patient = Patient.all(:conditions => ['user_id = ?', current_user.id]) %>
<%= link_to'Update Profile Information', edit_patient_path(@patient) %></br></br>
<%= link_to "Back", patients_path %>
<% end %>
<% if current_user.role == "doctor" %>
<% @doctor = Doctor.all(:conditions => ['user_id = ?', current_user.id]) %>
<%= link_to'Update Profile Information', edit_doctor_path(@doctor) %></br></br>
<%= link_to "Back", doctors_path %>
<% end %>
