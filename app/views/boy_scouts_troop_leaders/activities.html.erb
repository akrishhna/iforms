<div class="boy_scouts_troop_leaders_nav_links">
  <strong>Activities</strong> <strong> | </strong>
  <%= link_to "Activity Consent Forms", permission_forms_boy_scouts_troop_leaders_path %> <strong> | </strong>
  <%= link_to "Roster", roster_boy_scouts_troop_leaders_path %>
</div>

<div>&nbsp;</div>

<div>
  <p style="margin: 0">Select an Activity</p>
  <%#= debug @boys_scouts_activities%>
  <%= select_tag("boy_scouts_activities", options_for_select(@boy_scouts_activities.collect { |a| [truncate(a[0], :length => 30), a[1], :title => a[0]] }, session[:selected_activity_id]), :include_blank => true) %>
  <%= link_to "Create New Activity", "#", :class => "btn btn-primary create_new_activity" %> &nbsp;
  <%= link_to "Delete This Activity", "#delete_activity_alert_box", :class => "btn btn-danger delete_activity" %> &nbsp;
  <%= link_to "View This Permission Form PDF", @boy_activity.new_record? ? boy_activity_permission_form_pdf_path(:activity_id => 'new') : boy_activity_permission_form_pdf_path(:activity_id => @boy_activity.id), :class => "btn btn-info view_permission_form_btn", :target => '_blank' %>
</div>

<div class="clear"></div>

<%= form_for @boy_activity, :url => "/create_activity", :html => {:class => 'form-horizontal boy_scouts_activity_form', :multipart => true} do |f| %>

  <%= f.hidden_field :id %>
  <%= f.hidden_field :service_provider_id %>

  <div class="tabbable tabs-left iforms-tabs-left activity_tabs">

  <ul class="nav nav-tabs" id="activity_tab_links">
    <li class="active">
      <%= link_to "Activity", "#activity", "data-toggle" => "tab" %>
    </li>
    <li>
      <%= link_to "Tour Leader", "#tour_leader", "data-toggle" => "tab" %>
    </li>
    <li>
      <%= link_to "Send Notification Email to Parents", "#send_notification_email", "data-toggle" => "tab" %>
    </li>
  </ul>

  <div class="tab-content">
  <div class="tab-pane active" id="activity">
    <div class="control-group">
      <%= f.label :activity_name, "Name", :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :activity_name, :placeholder => params[:id] == 'new' ? 'New Activity Name' : '' %>
      </div>
    </div>

      <div class="control-group">
      <%#= f.label :activity_date_begin, "Date Begin", :class => 'control-label' %>
      <%= f.label :display_activity_date_begin, "Date Begin", :class => 'control-label' %>
      <div class="controls">
        <%#= f.text_field :activity_date_begin, :class => "boy_scout_activity_date_selector", :placeholder => "YYYY-MM-DD", "data-value" => f.object.activity_date_begin %>
        <%= text_field_tag :display_activity_date_begin, '', :class => "boy_scout_activity_date_selector display_date", :placeholder => "MM-DD-YYYY", "data-value" => f.object.activity_date_begin %>
        <%= f.hidden_field :activity_date_begin %>
      </div>
    </div>

    <div class="control-group">
      <%#= f.label :activity_date_end, "Date End", :class => 'control-label' %>
      <%= f.label :display_activity_date_end, "Date End", :class => 'control-label' %>
      <div class="controls">
        <%#= f.text_field :activity_date_end, :class => "boy_scout_activity_date_selector", :placeholder => "YYYY-MM-DD", "data-value" => f.object.activity_date_end %>
        <%= text_field_tag :display_activity_date_end, '', :class => "boy_scout_activity_date_selector display_date", :placeholder => "MM-DD-YYYY", "data-value" => f.object.activity_date_end %>
        <%= f.hidden_field :activity_date_end %>
      </div>
    </div>

    <div class="control-group">
      <%#= f.label :activity_signed_permission_due_date, "Signed Permission Form Due Date", :class => 'control-label' %>
      <%= f.label :display_activity_date_signed_permission, "Signed Permission Form Due Date ", :class => 'control-label' %>
      <div class="controls">
        <%#= f.text_field :activity_signed_permission_due_date, :class => "boy_scout_activity_date_selector", :placeholder => "YYYY-MM-DD", "data-value" => f.object.activity_signed_permission_due_date %>
        <%= text_field_tag :display_activity_date_signed_permission, '', :class => "boy_scout_activity_date_selector display_date", :placeholder => "MM-DD-YYYY", "data-value" => f.object.activity_signed_permission_due_date %>
        <%= f.hidden_field :activity_signed_permission_due_date %>
      </div>
    </div>

    <div class="activity_footer_links">
      <%= link_to "#", :class => 'btn btn-primary activity_nav_link', :data_tab_index => "1" do %>
        Next&nbsp;<i class="icon-chevron-right icon-white"></i>
      <% end %>
    </div>
  </div>
  <div class="tab-pane" id="tour_leader">
    <div class="control-group">
      <%= f.label :leader_first_name, "Name", :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :leader_first_name, :placeholder => "First Name", :class => "input-small" %>
        <%= f.text_field :leader_last_name, :placeholder => "Last Name", :class => "input-small" %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :leader_email, "Email", :class => 'control-label' %>
      <div class="controls">
        <%= f.email_field :leader_email, :style => 'width:400px' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :leader_phone_1, "Day Phone", :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :leader_phone_1, :class => "activity_phone", :placeholder => "###", :size => 3, :maxlength => 3  %> -
        <%= f.text_field :leader_phone_2, :class => "activity_phone", :placeholder => "###", :size => 3, :maxlength => 3  %> -
        <%= f.text_field :leader_phone_3, :class => "activity_phone_last", :placeholder => " ####", :size => 4, :maxlength => 4  %>
      </div>
    </div>
    <div class="activity_footer_links">
      <%= link_to "#", :class => 'btn btn-primary activity_nav_link', :data_tab_index => "0" do %>
        &nbsp;<i class="icon-chevron-left icon-white"></i>Prev
      <% end %>
      <%= link_to "#", :class => 'btn btn-primary activity_nav_link', :data_tab_index => "2" do %>
        Next&nbsp;<i class="icon-chevron-right icon-white"></i>
      <% end %>
    </div>
  </div>
  <div class="tab-pane" id="send_notification_email">
      <% if @boy_activity.activity_name.to_s == "" ||
        @boy_activity.activity_signed_permission_due_date.to_s == "" ||
        @boy_activity.leader_first_name.to_s == "" ||
        @boy_activity.leader_last_name.to_s == "" %>
        <%= link_to "Send Notification Email to Parents", "#", :class => "btn btn-primary", :id => "notification_email_to_parent", :disabled => "disabled" %>
      <% else %>
        <%= link_to "Send Notification Email to Parents", "#", :class => "btn btn-primary", :id => "notification_email_to_parent", :disabled => false, "data-loading-text" => "loading" %>
      <% end %>
    <span style="margin-left: 90px;background-color:#d3d3d3;" class="mail_success_notification hide"><span class="mail_counter"><%= @counter %></span>&nbsp;&nbsp;Messages sent</span>
    <br>

    <div class='notification_email_to_parent_text radius-border' style="margin-top: 15px">
      <%= render :partial => 'parents_email_notification', :locals => {:boy_activity => @boy_activity, :boy_scout => @boy_scout} %>
    </div>
    <div class="activity_footer_links">
      <%= link_to "#", :class => 'btn btn-primary activity_nav_link', :data_tab_index => 1 do %>
        &nbsp;<i class="icon-chevron-left icon-white"></i>Prev
      <% end %>
    </div>
  </div>
  </div>
  </div>
<% end %>


<div id="delete_activity_alert_box" class="hide" style="width:200px;text-align: center;">
  <p style="font-size:18px;margin: 10px 0 15px 0; ">
    Delete <span id="delete_activity_name"><%= @boy_activity.activity_name ? @boy_activity.activity_name : "Activity #"+@boy_activity.id.to_s %></span>
    Activity?</p>
  <%= link_to "Yes", "#", :class => "btn btn-danger delete_activity_yes", :id => "delete_activity_yes" %>&nbsp;&nbsp;
  <%= link_to "No", "#", :class => "btn btn-primary", :id => "delete_activity_no", :onclick => "$.fancybox.close();" %>
</div>