<% row_index = boy_scout_counter + 1 %>
<tr class="boy_scout_row" data_row_number=<%= row_index %>>
  <td class="boy_scout_check_box">
    <%= check_box_tag :check_box_row, boy_scout.id, false, :id => "check_box_row_#{row_index}" %>
    <%= hidden_field_tag :id, boy_scout.id, :id => "id_#{row_index}" %>
  </td>
  <td>
    <%= text_field_tag :first_name, boy_scout.first_name, :id => "first_name_#{row_index}", :class => 'boy_scout_name input-small', :placeholder => "First Name" %>
    <%= text_field_tag :last_name, boy_scout.last_name, :id => "last_name_#{row_index}", :class => 'boy_scout_name input-small', :placeholder => "Last Name" %>
    <%= text_field_tag :middle_name, boy_scout.middle_name, :id => "middle_name_#{row_index}", :class => 'boy_scout_name input-small', :placeholder => "Middle Name" %>
  </td>
  <td>
    <%= text_field_tag :parent_first_name, boy_scout.parent_first_name, :id => "parent_first_name_#{row_index}", :class => 'boy_scout_parent_name input-medium', :placeholder => "First Name" %>
    <%= text_field_tag :parent_last_name, boy_scout.parent_last_name, :id => "parent_last_name_#{row_index}", :class => 'boy_scout_parent_name input-medium', :placeholder => "Last Name" %>
  </td>
  <td>
    <% @user = User.find_by_email(boy_scout.email) %>
    <% if @user %>
      <% if @user.edit_confirmed == 'confirmed' %>
        <%= text_field_tag :email, boy_scout.email, :id => "email_#{row_index}", :class => 'boy_scout_email', :placeholder => "Email", :disabled => 'disabled' %>
      <% else %>
        <%= text_field_tag :email, boy_scout.email, :id => "email_#{row_index}", :class => 'boy_scout_email', :placeholder => "Email" %>
      <% end %>
      <% else %>
      <%= text_field_tag :email, boy_scout.email, :id => "email_#{row_index}", :class => 'boy_scout_email', :placeholder => "Email" %>
    <% end %>
  </td>
</tr>